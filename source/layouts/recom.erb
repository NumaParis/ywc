<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="google-site-verification" content="wRmJMb6w_YhNaLqSLGbZnRjMTJk93qirEaDRKksMgoY" />
    <meta name="google-site-verification" content="TXGgzhYN1BgoI9BmL3o61KDwOU9a8a4PQCfgwqjrP6M" />
    <title><%= 'Yeswecrowd - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag 'all' %>
  </head>
  
  <body data-spy="scroll" id="blog">
    
    <%= partial "navigation" %>

    <header class="container">
      <strong><%= current_article.title %></strong><br/>
      <em><%= current_article.data.info.job %></em><br/>
      <em><%= current_article.data.info.twitter %></em><br/>
      <em><%= current_article.data.info.photo %></em><br/>
      <em><%= image_tag current_article.data.info.photo %></em><br/>
      <em><%= current_article.data.info.one%></em><br/>
    </header>

    <div class="container">

      <article>
          <%= yield %>
      </article>

      <ul class="page-nav">
        <li>
          <% prev_article = current_article.previous_article %>
            <% if prev_article && prev_article.data.category == 'recommandations' %> 
            <a href="<%= prev_article.url %>" rel="prev" title="Previous article: <%= prev_article.title %>"> &larr; <%= prev_article.title %></a>
            <% end %>
        </li>
        <li>
          <% next_article = current_article.next_article %>
            <% if next_article && next_article.data.category == 'recommandations' %>
            <a href="<%= next_article.url %>" rel="next" title="Next article: <%= next_article.title %>"> <%= next_article.title %> &rarr;</a>
            <% end %>
        </li>
      </ul>
      
    </div>
    
    <%= partial "ga" %>

    <%= partial "footer_2" %>

  </body>
</html>