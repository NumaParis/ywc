---
pageable: true
per_page: 30
---

	<header class="intro">
		<div id="le-logo">
			<div>
				<div class="in text-center">
					<h1>#YESWECROWD</h1>
				 	<p class="bump"><em>We did it ! </em></p>
				 	<h1>1 000 000 â‚¬</h1>
				</div>
			</div>
		</div>

	</header>

	<div id="main" role="main" class="home clearfix">
		<div class="container">
			<div class="row">
				<div class="col-sm-push-1 col-sm-9">
					<section id="campaign">
						<h2><%= t(:pageheading) %></h2>
						<p><em><%= t(:motmarie) %></em>
						</p>
						<strong class="sig"><%= image_tag 'marie.jpg', :alt => "Marie Vorgan Le Barzic" %> <strong>Marie Vorgan Le Barzic <em>CEO</em></strong></strong>
						<div class="smartangels">
							<h3><%= t(:operationheading) %></h3>
							<p><%= t(:uniquemodel) %> <a href="http://SmartAngels.fr">SmartAngels.fr</a></p>
							<p><strong><%= t(:campaignduration) %></strong></p>
						</div>
					</section>

					<div class="le-video">
						<div class="fluid">
							<div class="mask"><iframe src="https://www.youtube.com/embed/co7_qw9W87o" frameBorder="0" allowfullscreen></iframe></div>
						</div>
					</div>
					
					<section id="ambition">
						<h2><%= t(:headingambition) %></h2>
						<div class="row">
							<div class="col-sm-8">
								<%= image_tag 'map.png', :class => "img-responsive", :alt => "Expanssion Map" %>
							</div>
							<div class="col-sm-4">
								<h4><%= t(:firstambition) %></h4>
							</div>
						</div>

						<div class="row">
							<div class="col-sm-12">
								<h4><%= t(:secondambition) %></h4>
								<p><%= t(:secondambitiondetails) %></p>
							</div>
						</div>

						<h2><%= t(:numamodel) %></h2>
						<div class="row">
							<div class="col-sm-6">
								<p><%= t(:modeldetails) %></p>
							</div>
							<div class="col-sm-6">
								<%= image_tag 'diagram.png', :class => "img-responsive", :alt => "NUMA Expanssion Map" %>
							</div>
						</div>
						<p><strong class="sig"><%= image_tag 'lucas_francou.jpg', :alt => "Lucas Francou" %> <strong>Lucas Francou <em><%= t(:lucasjobdesc) %></em></strong></strong></p>
						<div class="action"> <a class="btn btn-blue" href="https://www.smartangels.fr/entreprises/numa"><%= t(:participate) %></a> </div>
					</section>
					
					<section id="realisations">
						<h2><%= t(:headingproof)%></h2>
						<div class="posts">
							<% blog.articles.select do |article| %>
								<% if article.data.category == 'blogging' && article.data.lang == t(:lang) %>
									<article>
									  <div class="small-cover"><a href="<%= article.url %>"><%=image_tag article.data.cover %></a></div>
									  <h3 class="title"><a href="<%= article.url %>"><%= article.data.apercu %></a></h3>
									</article>
								<% end %>
							<% end %>
						</div>
					</section>
					
					<section id="meetups">
						<h3>Meetups</h3>
						<p> <%= t(:meetups) %> <a href="mailto:yeswecrowd@numa.paris">yeswecrowd@numa.paris</a></p>
						<p><a target="_blank" class="btn btn-black" href="https://www.numa.paris/Evenements/Num-Apero-7-Soiree-speciale-YesWeCrowd"><%= t(:register) %></a>
					</section>
			  </div>

			</div>
		</div> <!-- .container -->

	<div class="now">

		<div class="container">
		<h4 class="text-center"><%=t(:fameheading)%></h4>
		
		<ul class="la-presse">
			<% data.publications.journal.each_with_index do |journal, index| %>
			  <li class="<%=journal.img%>">
				  <% link_to journal.url, :target => '_blank', :title => journal.title  do %>
				    <%= image_tag journal.img + '.png', :alt => journal.name %>
				  <% end %>
			  </li>
			<% end %>
		</ul>
	</div>


	<%= partial "footer" %>
	
	</div>

</div> <!-- end MAIN -->

